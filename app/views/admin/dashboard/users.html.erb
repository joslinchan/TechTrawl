
<h1>Users</h1>

<div class="card mb-4">
<table class="table table-borderless container table-hover">
  <thead>
    <tr class="table-success"> 
      <th scope="col" style="border-radius:8px 0px 0px 0px">Name</th>
      <th scope="col">email</th>
      <th scope="col">Organization</th>
      <th scope="col" style="border-radius:0px 8px 0px 0px">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td style="border-right: 1px solid #e2e8eb"><%= user.first_name %></td>
      <td style="border-right: 1px solid #e2e8eb"><%=user.email%></td> 
      <td style="border-right: 1px solid #e2e8eb"><%=user.company_id%></td>       
      <td>
        <%= link_to('edit', edit_user_path(user), class:"mr-3")%>
        <%= link_to('remove', user_path(user.id),
        method: :delete, class:"text-warning")%>
      </td>    
    </tr>
    <%end%>
  </tbody>
</table>
</div>
