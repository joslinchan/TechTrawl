<h1>Technologies</h1>

 
<%= form_for @tag do |t| %>
  <div>
    <%= t.label :name %>
    <%= t.text_field :name %>
  </div>

  <%= t.submit "Add"%>
<%end%>

<table class="table table-bordered container">
  <thead>
    <tr>
      <th scope="col">Technology Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td> <%= link_to('remove', tag_path(tag.id),
      method: :delete)%></td>
    </tr>
    <%end%>
  </tbody>
</table>

