<h1>Organizations</h1>

<table class="table table-bordered container">
  <thead>
    <tr>
      <th scope="col">Organization Name</th>
      <th scope="col">Published</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%=company.published%></td> 
      <td>
        <%= link_to('show', company_path(company.id))%>
        <%= link_to('edit', edit_company_path(company.id))%>
        <%= link_to('remove', company_path(company.id),
        method: :delete)%>
      </td>    
    </tr>
    <%end%>
  </tbody>
</table>




