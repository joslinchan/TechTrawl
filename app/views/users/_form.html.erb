<div style="margin-bottom: 64px;">

<%= form_for @user do |f| %>
 <% if @user.errors.any? %>
   <p>
     <%= @user.errors.full_messages.join(', ') %>
   </p>
 <% end %>

 <div>
   <%= f.label :first_name, class:"mt-3" %>
   <%= f.text_field :first_name, class:"form-control" %>
 </div>

 <div>
   <%= f.label :last_name, class:"mt-3" %>
   <%= f.text_field :last_name, class:"form-control" %>
 </div>

 <div>
   <%= f.label :email, class:"mt-3" %>
   <%= f.email_field :email, class:"form-control" %>
 </div>

 <div>
   <%= f.label :password, class:"mt-3" %>
   <%= f.password_field :password, class:"form-control" %>
 </div>

 <div>
   <%= f.label :password_confirmation, class:"mt-3" %>
   <%= f.password_field :password_confirmation, class:"form-control" %>
 </div>

 <%= f.submit nil, class:"btn btn-outline-dark mt-3", style:"float:right;" %>
<% end %>
</div>
