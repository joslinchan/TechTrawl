<h1>Articles</h1>

<% @top_headlines.each do |article| %>

    <div> 
    
        <img src="<%= article.urlToImage %>" style="width: 200px"><br>
        <%= link_to article.title, article.url %><br>
        <%= article.publishedAt %> - Source:
        <%= link_to article.name, article.url %><br>
        <%= article.description %>
        <hr>

    </div>  


<% end %>
