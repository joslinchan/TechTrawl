<!DOCTYPE html>
<html>
  <head>
    <title>TechTrawl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a href="/" class="navbar-brand text-success">
        <%= image_tag 'TechTrawl_logo', style:"width: 52px" %>
        TechTrawl
      </a>
      <button 
      class="navbar-toggler" 
      type="button" 
      data-toggle="collapse" 
      data-target="#my-nav-menu" 
      aria-controls="navbarNav" 
      aria-expanded="false" 
      aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
     </button>
    <div 
    id="my-nav-menu" 
    class="collapse navbar-collapse justify-content-end">
      <div class="navbar-nav">

        <%= link_to(
          'Directory', 
          home_path, 
          class: "nav-link text-light mr-3"
          ) %>
        <%= link_to(
          'Events', 
          events_path, 
          class: "nav-link text-light mr-3"
          ) %>
        <%= link_to(
          'Articles', 
          articles_path, 
          class: "nav-link text-light mr-3"
          ) %>

      </div>
    </div>
  </nav>

     <% if current_user&.admin? %>
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #e0eed0">
          <span class="navbar-brandtext-dark">Admin Dashboard</span>
          <div class="navbar-nav m-auto">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to('Organization', admin_dashboard_organizations_path, class: "nav-link text-dark") %>
              </li>
              <li class="nav-item">
                <%= link_to('Events', events_path, class: "nav-link text-dark") %>
              </li>
              <li class="nav-item">
                <%= link_to('News', home_path, class: "nav-link text-dark") %>
              </li>
              <li class="nav-item">

                <%= link_to('Users', admin_dashboard_users_path, class: "nav-link") %>

                <%= link_to('Users', admin_dashboard_index_path, class: "nav-link") %>

              </li>
              <li class="nav-item">
                <%= link_to('Technologies', admin_dashboard_technologies_path, class: "nav-link text-dark") %>
              </li>
            </ul>
          </div>
        </nav>
      <% end %>



    <div class="container-fluid">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> alert-dismissible fade show">
        <%= message %>
      </div>
    <% end %>
    </div>

    <div class="container mt-4">
    <%= yield %>
    </div>

    <footer class="page-footer font-small">
    <nav class="navbar bg-dark">
<div class="container mx-0 my-3 d-flex">
          <div class="flex-fill">
            <% if current_user.present? %>
              <p>Hi, <%= current_user.first_name %></p>
              <%= link_to('Submit Organization', new_company_path)%><br>
              <%= link_to(
                'Sign Out',
                  session_path,
                  method: :delete, 
                  class: "text-light"
              ) %>
            <% else %>
              <%= link_to('Sign In', new_session_path, class: "text-light") %>
              <br />
              <%= link_to('Sign Up', new_user_path, class: "text-light") %>
              <br />
              <%= link_to('About', about_path, class: "text-light") %>
            <% end %>
            </div>
            <div class="flex-fill">
                <%= image_tag 'TechTrawl_logo', style:"width: 64px; float: right" %>
             
            </div>
    </nav>
    </footer>

  </body>
</html>






